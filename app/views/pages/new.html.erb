<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
      <h1>Create a new Pool</h1>
      <%= simple_form_for @pool do |f| %>
        <%= f.input :name %>
        <%= f.input :size %>
        <%= f.input :type %>
        <%= f.input :price %>
        <%= f.checkbox :available %>
        <%= f.submit class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>