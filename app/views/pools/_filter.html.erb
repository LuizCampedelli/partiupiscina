<div class="container">
  <div class="row justify-content-center">
    <div class="col-sm-10">
      <div id="capacity">
        <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
          <div class="form-group mr-2">
            <%= f.input :capacity, input_html: { value: 0 } %>
            <%= f.submit "Search", class: "btn btn-primary btnblue" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
