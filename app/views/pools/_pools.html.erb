<div class="container-fluid">
  <div class="row row-cols-4 align-items-center">
    <div class="row w-100 justify-content-md-center">
      <% @pools.each do |pool| %>
          <div class="col-md-auto col-md-offset">
            <div class="card-pool index-pool">
                <div class="card-products index-products">
                    <div class="card-pool-infos index-infos">
                      <div class="card-pool-infos index-infos">
                        <div>
                        <a href="<%= pool_path(pool.id) %>">
                          <% if pool.photos.attached? %>
                            <%= cl_image_tag pool.photos.first.key, :crop=>"fit", class: "img-cl" %></a>
                          <% else %>
                            <%= image_tag 'pisci9.jpg', :crop=>"fit", class: "img-cl" %></a>
                          <% end %>
                          <li><strong><%= pool.name %></strong></li>
                        </div>
                      </div>
                    </div>
                </div>
            </div>          
          </div>
        <% end %>
  </div>
</div>
